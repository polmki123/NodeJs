<% include ../header.ejs %>

    <table class="table table-bordered table-hover">
        <tr>
            <th>제목</th>
            <th>가격</th>
            <th>작성일</th>
            <th>작성일</th>
            <th>삭제</th>
        </tr>
        <% products.forEach( function(product){ %>
        <tr>
            <td>
                <a href="/admin/products/detail/<%=product.id%>"><%=product.name%></a>
            </td>
            <td>
                <%=product.price%>원
            </td>
            <td>
                <%=product.getDate.year%>-<%=product.getDate.month%>-<%=product.getDate.day%>
            </td>
            <td>
                <%=product.created_at%>
            </td>
            <td>
                <a href="/admin/products/delete/<%=product.id%>" class="btn btn-danger" onclick="return confirm('삭제하시겠습니까?')">삭제</a>
            </td>
        </tr>
        <%});%>
    </table>

    <a href="/admin/products/write" class="btn btn-primary">작성</a>

<% include ../footer.ejs %>